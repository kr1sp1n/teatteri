html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    script.
      (function(e,t,n){var r=e.querySelectorAll("html")[0];r.className=r.className.replace(/(^|\s)no-js(\s|$)/,"$1js$2")})(document,window,0);

    link(rel='stylesheet', href='upload.css')
  body
    div#content
      h1= message
      form(action='/photos/upload', method='POST', enctype='multipart/form-data')
        p Step 1:
        input(type="file", name="photo", id="file", class="inputfile inputfile-c", data-multiple-caption="{count} files selected", multiple)
        label.custom-file(for="file")
          span Choose File &hellip;

        p Step 2:
        input(type='text', name='comment', placeholder="Your Comment ...")

        p Step 3:
        input(type='submit', value='Upload', name='submit', id='submitfile', class='submitfile')
        
    script(src='addition.js')
